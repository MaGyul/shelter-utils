.ref-scroll-container {
    display: flex;
}

.ref-box, 
.ref-item:first-child {
    overflow: hidden;
    text-overflow: ellipsis;
}

.comment-content-container .art_txt,
.art_txt > :not(:has(:where(.video-js, img, iframe, embed, object))),
.simple-notice-detail-container > div.word-break-all {
	zoom: var(--noan-zoom);
}

input.zoom-in-out {
    margin-left: 10px;
    cursor: pointer;
}